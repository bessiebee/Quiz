<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.bessie.prequiz.Main2Activity">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#D32F2F"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:layout_margin="5dp"
            android:src="@drawable/homeicon"
            android:onClick="home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:33"
            android:textColor="#FAFAFA"
            android:padding="12dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="10"
            android:progress="40"
            android:layout_margin="12dp"
            android:layout_weight="0.24" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : 0"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_margin="5dp"
            android:src="@drawable/setting"/>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banana"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/display"
        android:background="@drawable/round_buttons"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/cucumber"
            android:background="@drawable/image_borders"
            android:id="@+id/cucumber1"
            android:onClick="incorrect"/>


        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/banana"
            android:background="@drawable/image_borders"
            android:id="@+id/banana1"
            android:onClick="correct"/>

        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/redpepper"
            android:background="@drawable/image_borders"
            android:id="@+id/redpepper1"
            android:onClick="incorrect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="101dp"
            android:layout_height="84dp"
            android:layout_margin="10dp"
            android:src="@drawable/pineapple"
            android:background="@drawable/image_borders"
            android:id="@+id/pineapple1"
            android:onClick="incorrect"/>
        <ImageView
            android:layout_width="101dp"
            android:layout_height="84dp"
            android:layout_margin="10dp"
            android:src="@drawable/cheese"
            android:background="@drawable/image_borders"
            android:id="@+id/chesse1"
            android:onClick="incorrect"/>
        <ImageView
            android:layout_width="101dp"
            android:layout_height="84dp"
            android:layout_margin="10dp"
            android:src="@drawable/strawberry"
            android:id="@+id/strawberry1"
            android:background="@drawable/image_borders"
            android:onClick="incorrect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/carrot"
            android:background="@drawable/image_borders"
            android:id="@+id/carrot1"
            android:onClick="incorrect"/>

        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/spinach"
            android:background="@drawable/image_borders"/>
        <ImageView
            android:layout_width="101dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/cucumber"
            android:background="@drawable/image_borders"/>

    </LinearLayout>






    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hint"
        android:background="@drawable/round_buttons"
        android:layout_margin="15dp"
        android:onClick="hint"
        />




</LinearLayout>
