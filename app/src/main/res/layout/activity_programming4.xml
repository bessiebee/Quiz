<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.example.bessie.prequiz.programming4">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#D32F2F"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:layout_margin="5dp"
            android:src="@drawable/homeicon"
            android:onClick="home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programming"
            android:textColor="#FAFAFA"
            android:padding="12dp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="10"
            android:progress="40"
            android:layout_margin="12dp"
            android:layout_weight="0.24" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : 0"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_margin="5dp"
            android:src="@drawable/setting"/>



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the correct answer"
        android:textColor="#424242"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shortcut to Undo"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#3E50B4"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Ctrl + U"
            android:textSize="25sp"
            android:textColor="#424242"
            android:onClick="incorrect"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Ctrl + Z"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="#424242"
            android:onClick="correct"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Shift + Y"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="#424242"
            android:onClick="incorrect"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Ctrl + U + N"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textColor="#424242"
            android:onClick="incorrect"

            />


    </RadioGroup>

</LinearLayout>
